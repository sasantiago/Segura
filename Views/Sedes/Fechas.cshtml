            <div class="form-group row align-items-center">
                <label class="col-sm-4 col-form-label" for="habitaciones">Habitaciones:</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="habitaciones">
                </div>
            </div>
            <div class="form-group row align-items-center">
                <label class="col-sm-4 col-form-label" for="precio">Dias Ordinarios:</label>
                <div class="col-sm-1">
                    <input type="text" class="form-control" style="width:40px" id="precio">
                </div>
                <div class="col-sm-7">
                    <input type="text" class="form-control" id="">
