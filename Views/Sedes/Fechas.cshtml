                <div class="col-sm-8">
                    <p class="text-danger fs-3">$0000</p>
                </div>
            </div>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmarReservaModal">Reservar</button>
        </div>
